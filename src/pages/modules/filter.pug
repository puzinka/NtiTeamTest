        .container2 
            input(class="checkbox" type="checkbox" id="twenty")
            label(for="twenty") 20 см
        .container2 
            input(class="checkbox" type="checkbox" id="thirty-five")
            label(for="thirty-five") 35 см
        .container2 
            input(class="checkbox" type="checkbox" id="fifty")
            label(for="fifty") 50 см

