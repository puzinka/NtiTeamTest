.filter
    .container
        p.title-filter Фильтры
        #reset
            p Сбросить
            img(src="../img/reset.png", alt="Reset")

    mixin header(text, name)
        div(class=name)
            p=text
            img(src="../img/show.png", alt="Show")

    +header("Отопительное оборудование","classification filter-section-header")
    #classification-hidden
        .container2 
            input(class="checkbox" type="checkbox" id="radiator")
            label(for="radiator") Радиаторы отопления
        .container2 
            input(class="checkbox" type="checkbox" id="convector")
            label(for="convector") Конвекторы отопления
        .container2  
            input(class="checkbox" type="checkbox" id="dryer")
            label(for="dryer") Полотенцесушители
        .container2  
            input(class="checkbox" type="checkbox" id="fitting")
            label(for="fitting") Арматура для радиаторов
    
    +header("Бренд", "brand filter-section-header")
    #brand-hidden
        .container2 
            input(class="checkbox" type="checkbox" id="purmo")
            label(for="purmo") Purmo
        .container2 
            input(class="checkbox" type="checkbox" id="irsap")
            label(for="irsap") Irsap
        .container2 
            input(class="checkbox" type="checkbox" id="terma")
            label(for="terma") Terma
        .container2 
            input(class="checkbox" type="checkbox" id="loten")
            label(for="loten") Loten
        .container2 
            input(class="checkbox" type="checkbox" id="guardo")
            label(for="guardo") Guardo

    div(class="price filter-section-header")
        p Цена
    include slider 
    
    +header("Количество секций", "count-sections filter-section-header")
