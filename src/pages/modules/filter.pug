            input(class="checkbox" type="checkbox" id="eight")
            label(for="eight") 8
        .container2 
            input(class="checkbox" type="checkbox" id="twelve")
            label(for="twelve") 12

    +header("Межосетевое расстояние", "distance filter-section-header")
